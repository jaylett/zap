# Make file for BDF2Zap
# (c) Christian Ludlam
# $Id: Makefile,fe1,v 1.1 2004/03/30 12:07:52 christian Exp $

OBJECTS		= o.main

CCFLAGS		= -throwback -O -depend !Depend \
		  -IOSLib: -IELib: -IC:
LINK		= link
LINKFLAGS	= #-debug
LINKLIBS	= C:o.stubs
CC		= cc

.SUFFIXES:	.o .c .o .s

bdf2zap: 	$(OBJECTS)
		@echo Linking
		@$(LINK) $(LINKFLAGS) -o bdf2zap $(OBJECTS) $(LINKLIBS)
		@echo <7>Finished

clean:;		IfThere o.* Then Wipe o.* ~C~V~FR
		Remove bdf2zap

.c.o:;		@echo compiling  $<
		$(CC) $(CCFLAGS) -c $< -o o.$*

# Dynamic dependencies:
o.main:	c.main
o.main:	h.commands
o.main:	h.commands
