; Contains the error numbers
; $Id: Errors,fff,v 1.1.2.1 2001/06/11 22:36:08 ds Exp $

; generate (and translate) an error
; use with no stacked registers!
		MACRO
$la		ERROR	$num,$tok
$la		ADD	R0,PC,#0
		B	messages_error
		&	$num
		=	"$tok",0
		ALIGN
		MEND


; create an error block with a token
		MACRO
$la		ERRTOK	$num,$tok
$la		&	$num
		=	"$tok",0
		ALIGN
		MEND


err_ukswi	* &1E6					; RO stanard err number

		^ ENUM
err_nohandles	# 1
err_badlink	# 1
err_notfound	# 1
err_notfont	# 1
err_cantdie	# 1
err_badhandle	# 1
err_nocache	# 1

	END
