#! /usr/bin/perl -w
# $Id: mkent,102,v 1.1 2003/05/15 21:14:45 ds Exp $

my @entities;
my @codes;
my ($i, $j);

while (<>)
{
  chomp;
  next if $_ eq '' || $_ =~ /^;/o;
  push @entities, $_;
}

my @sorted = sort { my $A = $a; my $B = $b;
		    $A =~ tr/A-Z/a-z/; $B =~ tr/A-Z/a-z/;
		    $A cmp $B;
		  } @entities;

print "indexentitylist\n";
for ($i = 0; $i < 128; $i++)
{
  for ($j = 0; $j < @sorted; $j++)
  {
    if ($entities[$i] eq $sorted[$j])
    {
      printf "\tDCW\t%i\n", $j;
      last;
    }
  }
}

for ($i = 128; $i < 132; $i++)
{
  for ($j = 0; $j < @sorted; $j++)
  {
    if ($entities[$i] eq $sorted[$j])
    {
      printf ";num%s\t*\t%i\n", $entities[$i], $j;
      last;
    }
  }
}

print "\nentitylist\n";
for $i (@sorted)
{
  printf "\t=\t\"%s{\"\n", $i;
}
print <<EOT;
	=	"**"
	ALIGN
	END
EOT

exit 0;
