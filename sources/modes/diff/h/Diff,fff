ws_redrawcolour	#	1	; last used redraw colour (SAME_LOGICAL_LINE)
ws_size		#	0

		^	0
mb_sizestore	#	4	; stores mb_size
mb_flags	#	4
mb_size		#	0

		^	9
colour_base	#	0
colour_control	#	1	; "control" line
colour_remove	#	1
colour_add	#	1
