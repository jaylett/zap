; BPL loop2$l
;totheendtwmov
; FNcall Zap_StopOp		; do all in one go
 FNRTS

in_maybe_adjust
 FNJSR "R0-R11"
; BL chkvalidity$l
; FNRTS NE
 LDR R7,[R9,#f_source]
 LDR R6,[R7,#16]		; #16 Emulated text window (VDU 28) min x
 LDR R14,[R7,#24]		; #24 Emulated text window (VDU 28) max x
 SUB R6,R14,R6			; 'real' width
 SUB R5,R3,R5
 MUL R5,R6,R5
 ; r5 now used :/
 SUBS R6,R2,R4
 ADDS R5,R5,R6
 BEQ endnoteq$l

 BLPL checktoseeifinprompt
 BPL endnoteq$l ; endeq$l

 CMP R5,#0
 MOVPL R3,#&8C00
 MOVMI R3,#&8D00
 RSBMI R5,R5,#0
 ;CMP R5,#&38
 ;MOVCS R5,#&38

 ORR R3,R3,R3,LSL #16
 MOV R0,R5,LSL#1		; total length
 ADD R0,R0,#12
 FNcall Zap_Claim		; reserve memory
 FNRTS VS
 MOV R7,R0
; BL wiggleit
 MOV R5,R5,LSL #1
 ADD R2,R5,#7
 BIC R2,R2,#3
; ADD R2,R2,#4
loop$l
 STR R3,[R7,R2]
 SUBS R2,R2,#4
 BPL loop$l
; LDR R14,thewiggle$l
; STR R14,[R7];
; ADD R5,R5,#4;
 BL twmode_char
 MOV R0,R7
 FNcall Zap_Free
endeq$l
 MOVS R0,#0			; EQ...
 FNRTS

endnoteq$l
 MVNS R0,#0			; NE...
 FNRTS

; returns PL if in prompt
checktoseeifinprompt
 FNJSR "R0,R1"
 LDR R0,[R7]			; #16 Task handle
 SWI XLineEditor_ReadInfo	; R0 LL - R1 cur pos.
 BVS unklineedit$l
 CMP R0,#0
 BMI unklineedit$l
 CMP R5,R1
 BGT inprompt$l
unklineedit$l
 MOVS R14,#-1
 FNRTS
inprompt$l
 SUBS R14,R14,R14
 FNRTS

