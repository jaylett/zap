twmode_interrogate
 CMP R0,#11
 MOVEQ PC,R14
 CMP R0,#1
 CMPNE R0,#2
 CMPNE R0,#7
 CMPNE R0,#13		; sayt
 CMPNE R0,#22		; confine?
 CMPNE R0,#23		; confine?
 CMPNE R0,#24		; confine?
 MOVEQ R0,#0
 MOVEQ PC,R14
 CMP R0,#21			; drags are ctrl-drags...?
 LDREQB R0,local_stored_cur_posn + 24
 MOVEQ PC,R14
; CMP R0,#4
; BEQ mode0_getswchars
 CMP R0,#14		; what mode type?
 MOVEQ R0,#3		; TW
 MOVEQ PC,R14
 CMP R0,#0
 CMPNE R0,#3
 MOVNE PC,R14
 MOV R0,R1
 MOV PC,R14

 END
