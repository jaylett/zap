;
; LDR	 R0,tempS1
; LDR	 R1,tempS2
; MOV	 R2,#0
; STR	 R2,[R0,R1]
;
; LDMFD	 R13 !,{R1-R5,PC}
;
;markmenpath
; = "<ZapTaskWindow$Menus>",0
; ALIGN

