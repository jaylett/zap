; sets Zap's wimp task to 0 so it doesn't refuse to die
; $Id: KillZap,fff,v 1.1 2004/09/23 20:33:23 christian Exp $
 
 GET    h.ZapHeader


 ENTRY
                
                ADR    R1,Zap
                MOV    R0,#18
                SWI    XOS_Module

                MOVVC  R0,#0
                STRVC  R0,[R4,#wimp_task]
                MOV    PC,R14

Zap             =      |zap$|,0
                ALIGN

 END
