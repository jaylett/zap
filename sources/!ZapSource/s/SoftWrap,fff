modesw_redrawline
 STMFD R13!,{R9,R14}
 MOV R0,R7
 STMFD R13!,{R5-R7,R12}
 STR R6,local_r0		 ; tt
 STR R11,local_r0 + 4		      ; tt

 ; FN prepfindnextphysl
 LDR R3,[R9,#f_ptr]
 LDR R4,[R9,#f_splito]
 ADD R4,R4,R3
 LDR R5,[R9,#f_splits]
 LDR R6,[R9,#f_len]
 ADD R6,R6,R3
 ADD R6,R6,R5
