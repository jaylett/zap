 ;STMFD R13!,{R11}
 LDRB R11,[R8,#w_tabc]

 ;CMP R4,R10			 ; TT
 ;SUB R2,R4,R7			 ; TT
 ;SUBHI R2,R2,R1		 ; WAS 'CS'

 LDR R3,[R8,#w_txtw]
 ADD R3,R6,R3,LSL #1
 CMP R7,R4			; TT
 BCS mrl_cc_end			; nothing to do (only an eol-char or at eot)
 STMFD R13!,{R12}		; TT
 MOV R12,#0			; TT
mrl_copychars
 LDRB R14,[R7],#1		; TT
 TEQ R14,R11			; TT
 BLEQ mrl_tab			; TT
 ;BEQ dontdostoring		; TT
 ADDNE R12,R12,#1		; TT
 ADDNE R3,R3,#1
 ADDNE R6,R6,#1
 ;LDRB R0,[R6],#1		; TT
 ;CMP R0,#' ';			; TT ; has someone else done this...?
