 CMP R0,R4
 BCC mrl_nologline
 ADD R4,R4,R1			; WAS R4
 CMP R0,R4			; WAS R4
 SUBLT R0,R0,R1			; 14

 ; ;STMFD R13!,{R14}		; stack ptr to eot
