; BL clip_cache
;; FNcall Zap_ClipCache,R7
; LDMFD R13!,{R1-R7,R12,PC}^

modesw_prevline
 STMFD R13!,{R1-R7,R12,R14}
 LDR R14,[R9,#f_docom]
 CMP R14,#0
 CMPNE R14,#7 ; was 5
 LDMCSFD R13!,{R1-R7,R12,PC}^	; exit if r14=0 or r14>=7

 LDR R3,[R9,#f_ptr]
 LDR R4,[R9,#f_splito]
 ADD R4,R4,R3
 LDR R5,[R9,#f_splits]
 LDR R6,[R9,#f_len]
 ADD R6,R6,R3
 ADD R6,R6,R5
 LDR R12,[R8,#w_bpl]
 LDRB R7,[R8,#w_cr]

 ADD R0,R0,R3
 CMP R0,R4
 ADDCS R0,R0,R5

; CMP R0,#0			; test code...
; BLGT findsologl		; test GT!!! (no go :-/)

 BL findsologl			; test GT!!!
; SUB R0,R0,#1
; BL findsologl			; ???
 CMP R0,R4
 SUBCS R0,R0,R5
 SUB R0,R0,R3

 LDR R12,[R13,#28]		; ******** reading from stack ********
 STMFD R13!,{R0}
 BL clip_cache
; FNcall Zap_ClipCache,R7	; severe dangers!

; ADD R1,R1,#1			; plus one!
 LDMFD R13!,{R0}

 LDMFD R13!,{R1-R7,R12,PC}^

;;;;;;;;;;;;;;;;;;;;;;;; mode_linestart ////////////////////////


modesw_linestart
modesw_lineprev
 STMFD R13!,{R1-R7,R12,R14}
 ;FNDBG_STRING "MODE_LINESTART R0="
 ;FNDBG_HEX8 0
 BL mls_lowlevel
 CMP R0,R4
 SUBHI R0,R0,R5
 SUBS R0,R0,R3
 ;FNDBG_STRING "EXIT: R0="
 ;FNDBG_HEX8 0
 ;FNDBG_DELIM
 MOVMI R0,#0			;-)
 LDMFD R13!,{R1-R7,R12,PC}^

mls_lowlevel
 STMFD R13!,{R14}

 ;FN prepfindnextphysl
 LDR R3,[R9,#f_ptr]
 LDR R4,[R9,#f_splito]
 ADD R4,R4,R3
 LDR R5,[R9,#f_splits]
 LDR R6,[R9,#f_len]
 ADD R6,R6,R3
 ADD R6,R6,R5
 LDR R12,[R8,#w_bpl]
 LDRB R7,[R8,#w_cr]

 ADD R0,R0,R3
 CMP R0,R4
 ADDCS R0,R0,R5
 MOV R1,R0
 MOV R2,R0
 ;fnDBG_STRING "MLS_LOWLEVEL "
 ;fnDBG_REGS
 BL findsologl
 ;fnDBG_STRING "AFTER FINDSOLOGL "
 ;fnDBG_REGS
mls_lp
 CMP R0,R1
 BGE mls_stop
 ADDS R2,R0,#0

 BL findnextphysl
 BVC mls_lp

mls_stop
 MOVNE R0,R2			; if the last line start found (in r0)
				; is too far, then use the
 ;FNdbg_string "mls_stop r0="
 ;FNdbg_hex8 0
 LDMFD R13!,{PC}^

;;;;;;;;;;;;;;;;;;;;;;;; mode_lineend //////////////////////////

modesw_lineend
 ; B modesw_linenext		; doesnt sort out cK :(
 STMFD R13!,{R1-R7,R12,R14}
 BL mls_lowlevel
 BL findnextphysl
 BCC mln_letsdoit		; if a ';n' follows, then it's quite ok
 MOV R12,#0
 MOVCS R12,#1
 MOVVC R12,#1			; see mode_cplus for expl.
 CMP R0,R4
 SUBHI R0,R0,R5
 SUBS R0,R0,R3
 SUBGT R0,R0,R12
 LDMFD R13!,{R1-R7,R12,PC}^

