 LDRB R7,[R8,#w_cr]

 BL findnextphysl
 LDR R1,[R9,#f_splits]		; important for later...
 MOV R2,R6			; R9 is EOF pointer.
 LDMFD R13!,{R5-R7,R12}

 ADDCS R11,R11,#1
 STMFD R13!,{R0}		; start of next phys line
 STMFD R13!,{R11}		; start of next phys line
 BCC mrl_nologline

