modesw_redrawlnum
 ;BIC R14,R14,#Cbit
 SUBS R0,R7,#1
 BICMIS PC,R14,#Cbit
 STMFD R13!,{R0-R4,R14}
 ; LDMCCFD R13!,{R3-R6,PC}^	  ; IF AT EOT...

 LDR R3,[R9,#f_ptr]
 LDR R4,[R9,#f_splito]
 ;ADD R4,R4,R3
 LDR R2,[R9,#f_splits]
 ;LDR R6,[R9,#f_len]
 ;ADD R6,R6,R3
 ;ADD R6,R6,R5

 CMP R0,R4
 ADDCS R0,R0,R2			; GET ADDRESS OF CHARACTER JUST BEFORE
 ADD R0,R0,R3

 LDRB R0,[R0]
 LDRB R1,[R8,#w_cr]
 TEQ R0,R1			; LAST LINE TERMINATED BY ';N'?
 LDMFD R13!,{R0-R4,R14}
 BICEQS PC,R14,#Cbit
 ORRNES PC,R14,#Cbit

 END
