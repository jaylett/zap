mode_table_0
	DCD	mode_table_0
	DCD	mode0_title
	DCD	mode0_author
	DCD	0
	DCD	0 :OR: emode_MayBeCloned
	DCD	mode0_init
	DCD	0
	DCD	mode0_table_end-mode_table_0

	DCD	Null			; postload
	DCD	Null
	DCD	Null
	DCD	modes_start
	DCD	modes_end
	DCD	mode0_width
	DCD	mode0_linecol
	DCD	mode0_lineoff
	DCD	mode0_clnlog
	DCD	mode0_clnphy
	DCD	mode0_clnoff
	DCD	mode0_nextline
	DCD	mode0_minus
	DCD	mode0_plus
	DCD	mode0_sminus
