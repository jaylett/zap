	DCD	mode0_cminus
	DCD	mode0_cplus
	DCD	mode0_redrawline
	DCD	mode0_redrawlnum
	DCD	mode0_char
	DCD	mode0_delete
	DCD	mode0_tab
	DCD	mode0_return
	DCD	Null			; renumber
	DCD	mode0_saveandrun	; save and run
	DCD	mode0_linestart
	DCD	mode0_lineend
	DCD	mode0_linenext
	DCD	mode0_lineprev
	DCD	mode0_copy
	DCD	mode0_joinline
	DCD	mode0_splitline
	DCD	Null			; align caret
