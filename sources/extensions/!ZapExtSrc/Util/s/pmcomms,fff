; Util commands by Paul Moore (from ZapUtils)
;
; WIN(UP|DOWN|LEFT|RIGHT)
; 			- All fairly obvious.

; Includes
		GET	h.ZapUtil

; What we give to other people
		EXPORT	pm_winleft
		EXPORT	pm_winright
		EXPORT	pm_winup
		EXPORT	pm_windown

; WIN(UP|DOWN|LEFT|RIGHT)
		LOCAL

		DCD	(2:SHL:3)+(1:SHL:12)
pm_winleft
		FNJSR
		BL	getarg$l

		LDR	r0,[windptr,#w_minx]
		SUB	r0,r0,r2
		STR	r0,[windptr,#w_minx]

		LDR	r0,[windptr,#w_maxx]
		SUB	r0,r0,r2
		STR	r0,[windptr,#w_maxx]

		MOV	r0,#1
		MOV	r1,windptr
		FNcall	Zap_OpenWindow

		FNRTS

		DCD	(2:SHL:3)+(1:SHL:12)
pm_winright
		FNJSR
		BL	getarg$l

		LDR	r0,[windptr,#w_minx]
		ADD	r0,r0,r2
		STR	r0,[windptr,#w_minx]

		LDR	r0,[windptr,#w_maxx]
		ADD	r0,r0,r2
		STR	r0,[windptr,#w_maxx]

		MOV	r0,#1
		MOV	r1,windptr
		FNcall	Zap_OpenWindow

		FNRTS

		DCD	(2:SHL:3)+(1:SHL:12)
pm_winup
		FNJSR
		BL	getarg$l

		LDR	r0,[windptr,#w_miny]
		ADD	r0,r0,r2
		STR	r0,[windptr,#w_miny]

		LDR	r0,[windptr,#w_maxy]
		ADD	r0,r0,r2
		STR	r0,[windptr,#w_maxy]

		MOV	r0,#1
		MOV	r1,windptr
		FNcall	Zap_OpenWindow

		FNRTS

		DCD	(2:SHL:3)+(1:SHL:12)
pm_windown
		FNJSR
		BL	getarg$l

		LDR	r0,[windptr,#w_miny]
		SUB	r0,r0,r2
		STR	r0,[windptr,#w_miny]

		LDR	r0,[windptr,#w_maxy]
		SUB	r0,r0,r2
		STR	r0,[windptr,#w_maxy]

		MOV	r0,#1
		MOV	r1,windptr
		FNcall	Zap_OpenWindow

		FNRTS

; \E r0=list of words, r1=number of words
; \X r2=sum of list, r0,r1,r3 corrupted
getarg$l
		MOV	r2,#0
loop$l		SUBS	r1,r1,#1
		LDRPL	r3,[r0],#4
		ADDPL	r2,r2,r3
		BPL	loop$l
		MOVS	pc,lr

; That's it
		END
